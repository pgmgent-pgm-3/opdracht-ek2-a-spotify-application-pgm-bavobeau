<section class="artists">
  <h1>Artists</h1>
  <ul class="list">
    {{#each artists}}
      {{>card card="artists"}}
    {{/each}}
  </ul>
</section>
{{#if (isEqual ../user.role.id 1)}}
<section class="artists__crud">
  <h3>Create new Artist</h3>
    <form action="/api/artist" method="post">
      <input type="text" name="name">
      <input type="submit">
    </form>
</section>
{{/if}}