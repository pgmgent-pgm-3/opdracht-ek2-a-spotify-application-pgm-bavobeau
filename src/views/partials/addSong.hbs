<li class="song song--add">
  {{#if (isNotEqual playlist_id playlists.0.id )}}
  <h4>{{ name }}</h4>
  <h4>{{ artist.name }}</h4>
  <h4>2:40</h4>
    <form action="/api/playlist/addSong" method="post">
      <input name="id" value="{{playlist_id}}" class="input--hidden">
      <input name="songId" value="{{id}}" class="input--hidden">
      <input type="submit" value="Add Song to playlist">
    </form>
  {{/if}}
</li>