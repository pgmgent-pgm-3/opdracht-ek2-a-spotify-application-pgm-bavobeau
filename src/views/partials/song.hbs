<li class="song">
  <h4>{{ name }}</h4>
  <h4>{{ artist.name }}</h4>
  <h4>2:40</h4>
    {{#if (isEqual role_id 1)}}
      <button class="button__function button__function--red button__function--icon" onClick="deleteSongFromPlaylist({{id}}, {{playlist_id}})">
        <img src="/img/icons/delete.svg" alt="trashcan">
      </button>
    {{/if}}
</li>